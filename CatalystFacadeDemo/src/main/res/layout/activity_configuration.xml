<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Configuration">

    <android.widget.Toolbar
        android:id="@+id/toolbar"
        android:title="@string/ApplicationName"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="?android:attr/colorPrimary"
        android:theme="@android:style/ThemeOverlay.Material.Dark.ActionBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" >
    </android.widget.Toolbar>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtTpsdkVersion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <LinearLayout
                android:id="@+id/subscriptiontypeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/txtTpsdkVersion"
                app:layout_constraintStart_toStartOf="parent">
                    <TextView
                        android:id="@+id/txtSubscriptionType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/SubscriptionType"/>
                    <Spinner
                        android:id="@+id/spnrSubscriptionType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtDeviceConfig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/DeviceConfig"
                android:textAppearance="?android:attr/textAppearanceMedium"
                app:layout_constraintTop_toBottomOf="@id/subscriptiontypeLayout"/>
            <LinearLayout
                android:id="@+id/drivertypeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/txtDeviceConfig"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:id="@+id/txtDriverType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/DriverType" />

                <Spinner
                    android:id="@+id/spnrDriverType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutConnectionType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/drivertypeLayout"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/txtConnectionType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ConnectionType" />

                <Spinner
                    android:id="@+id/spnrConnType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/layoutConnectionType"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/txtDeviceAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/DeviceAddress" />

                <Button
                    android:id="@+id/btnBthSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Search"
                    style="@style/facadeButtonStyle"/>

                <EditText
                    android:id="@+id/edtDeviceAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutDevicePort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/layoutAddress"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/txtPortNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Port" />

                <EditText
                    android:id="@+id/edtDevicePort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:importantForAutofill="no"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtCorrectionSource"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/CorrectionSource"
                android:textAppearance="?android:attr/textAppearanceMedium"
                app:layout_constraintTop_toBottomOf="@id/layoutDevicePort"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/txtSurveyType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/SurveyType"
                app:layout_constraintTop_toBottomOf="@id/txtCorrectionSource"
                app:layout_constraintStart_toStartOf="parent" />

            <Spinner
                android:id="@+id/spnrSurveyType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txtCorrectionSource"
                app:layout_constraintStart_toEndOf="@id/txtSurveyType"
                app:layout_constraintEnd_toEndOf="parent" />
            <TextView
                android:id="@+id/txtNtrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Ntrip"
                android:textAppearance="?android:attr/textAppearanceMedium"
                app:layout_constraintTop_toBottomOf="@id/spnrSurveyType"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:id="@+id/ntripServerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/txtNtrip"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/txtNtripServer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/NtripServer" />
                <EditText
                    android:id="@+id/edtNtripServer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck" />
             </LinearLayout>
            <LinearLayout
                android:id="@+id/ntripPortLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/ntripServerLayout"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:id="@+id/txtNtripPort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Port" />

                <EditText
                    android:id="@+id/edtNtripPort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:importantForAutofill="no"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ntripuserLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/ntripPortLayout"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:id="@+id/txtNtripUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/UserName"/>

                <EditText
                    android:id="@+id/edtNtripUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ntrippasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/ntripuserLayout"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:id="@+id/txtNtripPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Password" />

                <EditText
                    android:id="@+id/edtNtripPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:importantForAutofill="no"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ntripsourceLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/ntrippasswordLayout"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:id="@+id/txtNtripSource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/NtripSource" />

                <Spinner
                    android:id="@+id/spnrNtripSource"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtTransformation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Transformation"
                android:textAppearance="?android:attr/textAppearanceMedium"
                app:layout_constraintTop_toBottomOf="@id/ntripsourceLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/txtTargetFrame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Target Frame Type"
                app:layout_constraintTop_toBottomOf="@id/txtTransformation"
                app:layout_constraintStart_toStartOf="parent" />

            <Spinner
                android:id="@+id/spnrTargetReferenceFrame"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txtTransformation"
                app:layout_constraintStart_toEndOf="@id/txtTargetFrame"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/targetReferenceFrameIdLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/txtTargetFrame"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:id="@+id/txtTargetReferenceFrameId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target Frame ID" />
                <EditText
                    android:id="@+id/edtTargetReferenceFrameId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:importantForAutofill="no"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtGeoid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/Geoid"
                android:textAppearance="?android:attr/textAppearanceMedium"
                app:layout_constraintTop_toBottomOf="@id/targetReferenceFrameIdLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <LinearLayout
                android:id="@+id/geoidLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/txtGeoid"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:id="@+id/txtFilePath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GridFilePath" />

                <Button
                    android:id="@+id/btnGeoidFileChoose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GeoidChooseFile"
                    style="@style/facadeButtonStyle"/>

                <EditText
                    android:id="@+id/edtGeoidGridFileFullPath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txtAntenna"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/Antenna"
                android:textAppearance="?android:attr/textAppearanceMedium"
                app:layout_constraintTop_toBottomOf="@id/geoidLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <LinearLayout
                android:id="@+id/reducedAntennaLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/txtAntenna"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:id="@+id/txtReducedAntennaHght"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ReducedAntennaHght"/>

                <EditText
                    android:id="@+id/edtReducedAntennaHght"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:importantForAutofill="no"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutSerialNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/reducedAntennaLayout"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/DeviceSerialNumber"/>

                <TextView
                    android:id="@+id/txtDeviceSerialNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/DeviceSerialNumber"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutRTXSubscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/layoutSerialNumber"
                app:layout_constraintStart_toStartOf="parent">
                <Button
                    android:id="@+id/btnInstallRTXSubscription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/install"
                    style="@style/facadeButtonStyle"/>

                <TextView
                    android:id="@+id/txtInstallRTXSubscription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/code_for_rtx_subscription" />

                <EditText
                    android:id="@+id/edtInstallRTXSubscription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:importantForAutofill="no"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck"/>
            </LinearLayout>
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchEnableLogs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/EnableLogs"
                app:layout_constraintTop_toBottomOf="@id/layoutRTXSubscription"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <Button
                android:id="@+id/btnExportLogs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ExportLogs"
                app:layout_constraintTop_toBottomOf="@id/switchEnableLogs"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/facadeButtonStyle"/>

            <Button
                android:id="@+id/btnMailLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_log"
                app:layout_constraintTop_toBottomOf="@id/btnExportLogs"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/facadeButtonStyle"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>