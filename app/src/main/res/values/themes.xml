<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.TmmRelay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- hirenq Brand Colors -->
        <item name="colorPrimary">@color/hirenq_orange</item>
        <item name="colorPrimaryVariant">@color/hirenq_orange_dark</item>
        <item name="colorSecondary">@color/hirenq_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Background -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/hirenq_orange_dark</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/hirenq_orange_dark</item>
        
        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Button Style -->
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>
    
    <!-- Custom Button Style -->
    <style name="HirenqButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/hirenq_orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">16dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">4dp</item>
    </style>
    
    <!-- Title Text Style -->
    <style name="HirenqTitle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/hirenq_orange</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Subtitle Text Style -->
    <style name="HirenqSubtitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/hirenq_grey</item>
    </style>
    
    <!-- Outlined Button Style -->
    <style name="HirenqButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/hirenq_grey</item>
        <item name="android:textColor">@color/hirenq_grey</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>
