<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAppearance="@style/HirenqTitle" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/app_desc"
        android:textAppearance="@style/HirenqSubtitle" />

    <TextView
    android:id="@+id/tvDiagnosticsTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Diagnostics"
    android:textStyle="bold"
    android:textColor="@color/hirenq_grey"
    android:paddingTop="16dp" />

<TextView
    android:id="@+id/tvDiagnostics"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Waiting for data..."
    android:padding="12dp"
    android:background="@color/background_card"
    android:textColor="@color/text_primary"
    android:elevation="2dp" />

    <!-- Error Status Section -->
    <TextView
        android:id="@+id/tvErrorStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="12dp"
        android:background="@color/background_card"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:elevation="2dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:minHeight="56dp"
        android:text="@string/start_relay"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="#5a5855"
        android:elevation="4dp"
        style="@style/HirenqButton" />

    <!-- Status Section -->
    <TextView
        android:id="@+id/tvStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Status:"
        android:textStyle="bold"
        android:textColor="@color/hirenq_grey"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Stopped"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

    <!-- POST Payload Section -->
    <TextView
        android:id="@+id/tvPostLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Last POST:"
        android:textStyle="bold"
        android:textColor="@color/hirenq_grey"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

    <TextView
        android:id="@+id/tvPostPayload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="No POST calls yet"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:minHeight="56dp"
        android:text="@string/stop_relay"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="#5a5855"
        android:elevation="4dp"
        style="@style/HirenqButton" />

    <!-- Failure Status Section -->
    <TextView
        android:id="@+id/tvFailureLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="API Status:"
        android:textStyle="bold"
        android:textColor="@color/hirenq_grey"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

    <TextView
        android:id="@+id/tvFailureStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text=""
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:visibility="gone" />

</LinearLayout>

</ScrollView>
